extends layout2

block head 
  script.
    window.onload = function(){ // when loads this will be called
      Vue.use("Vuetify");
      new Vue({
        el: '#app',
        data: () => ({
          labels: [
            new Date().toLocaleString().substr(0,3),
            'tomorow',
            '6',
            '9',
            '12',
            '3',
            '6',
            '9'
          ],
          value: [
            200,
            675,
            410,
            390,
            310,
            460,
            250,
            240
          ]
        }),
    })}
  style.
    .v-sheet--offset {
      top: -24px;
      position: relative;
    }

    
block content
  h1.display-3.text-xs-center.front-weight-bold= `Hello ${user.name},`
  h1.display-3.text-xs-center.front-weight-bold= `Welcome to your Dashboard!`
  br
  br
  v-card
    v-sheet(class="v-sheet--offset mx-auto" color="cyan" elevation="11" )
      v-sparkline(
        :labels="labels"
        :value="value"
        color="white"
        line-width="1"
        padding="20")
